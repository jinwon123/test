package backJun_for;

import java.util.Scanner;

public class Backjun8 {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		int a = sc.nextInt();
		int[] b = null;
		int[] c = null;
		int[] sum = new int [a];
		
		for (int i=0; i<a; i++) {
			b[i] = sc.nextInt();
			c[i] = sc.nextInt();
			sum[i] = b[i] + c[i];
			System.out.println(b[i] + " " + c[i] + " " + sum[i]);
		}
		
//		for (int i=0; i<a; i++) {
//			System.out.println("Case #" + i + ": " + b + " + " + c + " = " + sum[i]);
//		}

	}

}
